<div class="admin-block">
    <h2>Trace Types</h2>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            {{#each model.types as |type|}}
                <tr>
                    <td>{{type.title}}</td>
                    <td>{{type.description}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>

    <form {{action "typeAdd" on="submit"}}>
        <label>type name:</label>
        {{input value=title}}
        <label>type description:</label>
        {{input value=description}}
        <input type="submit" value="add"/>
    </form>
</div>

<div class="admin-block">
    <h2>Companies</h2>
    <table>
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            {{#each model.companies as |company|}}
                <tr>
                    <td>{{#link-to 'admin.company' company}}{{company.name}}{{/link-to}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>