<h2>Admin</h2>
<div>
    {{#if showBusinessForm}}
        {{add-business}}
    {{/if}}
    <button class="btn" {{action "addBusinessForm"}}>Add Business</button>
    <div class="businesses">
        {{#each model.businesses as |business|}}
            <div class="card-business">
                <div class="card-business__logo">
                    <img src="{{business.logo}}" alt="{{business.name}}"/>
                </div>
                <h2>{{business.name}} <small>added: {{moment-format business.dateAdded 'MM/DD/YYYY' 'MM-DD-YYYY'}}</small></h2>
                <p>{{business.description}}</p>
            </div>
        {{/each}}
    </div>
</div>
