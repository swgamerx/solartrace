{{#paper-card as |card|}}
    {{#card.title as |title|}}
        {{#title.text as |text|}}
            {{#text.headline}}{{business.name}}{{/text.headline}}
                {{#text.subhead}}Addresses: {{business.addresses.length}}{{/text.subhead}}
                {{#text.subhead}}Traces: {{numberOfTraces}}{{/text.subhead}}
        {{/title.text}}
        {{title.media size='lg' src=business.logo}}
    {{/card.title}}
    {{#card.actions}}
    {{log business.id}}
        {{paper-link 'Create Trace' 'business.trace' business}}
    {{/card.actions}}
{{/paper-card}}